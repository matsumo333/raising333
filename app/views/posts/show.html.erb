<div class="main posts-show">
  <div class="container">
    <div class="posts-show-item">
      <p>
        <%= @post.content %>
      </p>
      <div class="post-time">
        <%= @post.created_at %>
      </div>
      <div class="post-menus">
        <%= button_to "編集", "/posts/#{@post.id}/edit",{method:"get"} %>
        <!-- destroyアクションへのリンクを作成してください -->
        <%= button_to "削除", "/posts/#{@post.id}/destroy", {method: "post"} %>
      </div>
    </div>
  </div>
</div>